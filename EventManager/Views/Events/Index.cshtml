@model IEnumerable<EventManager.Event>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EventType.Type)
        </th>
        <th>
			Manager Name
            @*@Html.DisplayNameFor(model => model.User.FullName)*@
        </th>
		<th>
			@Html.DisplayNameFor(model => model.Name)
		</th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
		<th>
			@Html.DisplayNameFor(model => model.IsPublic)
		</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EventType.Type)
        </td>
        <td>
			@Html.ActionLink(item.User.FullName, "IndexById", "Events", new { userId = item.ManagerId }, null)
        </td>
		<th>
			@Html.DisplayFor(modelItem => item.Name)
		</th>

		<td>
			@Html.DisplayFor(modelItem => item.Date)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.IsPublic)
		</td>
		<td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { eventId = item.Id}) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

